{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "install",
      "type": "shell",
      "command": "luarocks install --tree .luarocks --only-deps *.rockspec",
      "problemMatcher": []
    },
    {
      "label": "install-macos",
      "type": "shell",
      "command": "luarocks install --lua-dir=$(brew --prefix)/opt/lua@5.1 --tree .luarocks  --only-deps *.rockspec",
      "problemMatcher": []
    },
    {
      "label": "write_rockspec",
      "type": "shell",
      "command": [
        "luarocks",
        "write_rockspec",
        "--license=\"MIT\"",
        "--tag=\"develop\"",
        "--lua-versions=\"5.1\""
      ],
      "problemMatcher": []
    }
  ]
} 